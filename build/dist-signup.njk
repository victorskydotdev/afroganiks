---
title: Distributor Registration Form
layout: 'base.njk'
---

<section class="reg-section">
	<div class="container">
		<h3 class="form-title">Registration</h3>

		<form
			class="form"
			action=""
			netlify
			name="distributor-signup-form"
			enctype="multipart/form-data">
			<input
				type="hidden"
				name="subject"
				data-remove-prefix
				value="Sign up info from potential Afroganiks distributor" />

			<!-- inputs -->

			<!-- img upload -->
			<div class="img-upload-wrap">
				<div class="upload-input-wrap">
					<label for="img-input">Uplaod a passport</label>
					<input type="file" id="img-input" accept="image/png, img/jpg" />
				</div>

				<div class="display-img"></div>
			</div>
			<!-- end of img upload wrap -->

			<!-- first wrap -->
			<div class="form-input-wrap form-wrap-one">
				<!-- customer name -->
				<input
					class="input-field"
					type="text"
					name="customer name"
					id=""
					placeholder="Full Name"
					required />
				<!-- name -->

				<!-- phone and email -->
				<div class="flex-here">
					<input
						class="input-field"
						type="text"
						name="phone number"
						placeholder="Phone"
						required />

					<input
						class="input-field"
						type="email"
						name="email address"
						placeholder="Email Address"
						required />
				</div>
				<!-- phone and email -->

				<!-- gender wrap -->
				<div class="radio-wrap">
					<h3>Sex</h3>

					<div>
						<input type="radio" id="sex1" name="sex" value="male" />
						<label for="sex1">Male</label>

						<input type="radio" id="sex2" name="sex" value="female" />
						<label for="sex2">Female</label>

						<input type="radio" id="sex3" name="sex" value="no sex selected" />
						<label for="sex3">I'd rather not say</label>
					</div>
				</div>
				<!-- end of gender wrap -->

				<!-- residential address -->
				<input
					class="input-field"
					type="text"
					name="customer residential address"
					placeholder="Residential Address"
					required />
				<!-- end of residential address -->

				<!-- further address info -->
				<div>
					<input
						class="input-field"
						type="text"
						name="city"
						placeholder="City"
						required />

					<div class="location flex-here">
						<input
							class="input-field"
							type="text"
							name="state"
							placeholder="State"
							required />

						<input
							class="input-field"
							type="text"
							name="country"
							placeholder="Country"
							required />
					</div>
				</div>
				<!-- end of further address info -->

				<!-- marital status -->
				<div class="radio-wrap">
					<h3>Marital Status</h3>

					<div>
						<input
							type="radio"
							id="single"
							name="marital-status"
							value="S]single" />
						<label for="single">Single</label>

						<input type="radio" id="married" name="marital-status
						value="married" />
						<label for="married">Married</label>

						<input
							type="radio"
							id="others"
							name="marital-status"
							value="others" />
						<label for="others">Others</label>
					</div>
				</div>
				<!-- end of marital status -->
			</div>
			<!-- end of first wrap -->

			<!-- second wrap -->
			<div class="form-input-wrap form-wrap-two">
				<!-- customer name -->
				<input
					class="input-field"
					type="text"
					name="name-next-of-kin"
					id=""
					placeholder="Name of next of kin"
					required />
				<!-- name -->

				<div>
					<input
						class="input-field"
						type="text"
						name="next of kin's address"
						placeholder="Next of kin's address"
						required />

					<div class="flex-here">
						<input
							class="input-field"
							type="text"
							name="next of kin's phone number"
							placeholder="Phone"
							required />

						<input
							class="input-field"
							type="email"
							name="email address"
							placeholder="Email Address"
							required />
					</div>
				</div>

				<!-- further address info -->
				<div>
					<input
						class="input-field"
						type="text"
						name="city"
						placeholder="City"
						required />

					<div class="flex-here">
						<input
							class="input-field"
							type="text"
							name="state"
							placeholder="State"
							required />

						<input
							class="input-field"
							type="text"
							name="country"
							placeholder="Country"
							required />
					</div>
				</div>
				<!-- end of further address info -->
			</div>

			<!-- business name and address as well as products selection -->
			<div class="form-input-wrap">
				<!-- Business name -->
				<input
					class="input-field"
					type="text"
					name="Customer Business Name"
					id=""
					placeholder="Business Name (if any)" />
				<!--end of busuness name -->

				<input
					class="input-field"
					type="text"
					name="business address"
					id=""
					placeholder="Business Address" />
			</div>

			<!-- product categories -->
			<div class="product-categories">
				<!-- feloklear -->
				<div class="product">
					<label for="feloklear"
						>Feloklear <input type="checkbox" name="feloklear" id="feloklear"
					/></label>
				</div>

				<!-- freeflow for women -->
				<div class="product">
					<label for="freeflow-women"
						>Freeflow for Women
						<input type="checkbox" name="freeflow (women)" id="freeflow-women"
					/></label>
				</div>

				<!-- freeflow for men -->
				<div class="product">
					<label for="freeflow-men"
						>Freeflow for men
						<input type="checkbox" name="freeflow (men)" id="freeflow-men"
					/></label>
				</div>

				<!-- gynovit -->
				<div class="product">
					<label for="gynovit"
						>Gynovit <input type="checkbox" name="gynovit" id="gynovit"
					/></label>
				</div>

				<!-- prostagen -->
				<div class="product">
					<label for="prostagen"
						>prostagen <input type="checkbox" name="prostagen" id="prostagen"
					/></label>
				</div>

				<!-- greenolax -->
				<div class="product">
					<label for="greenolax"
						>greenolax <input type="checkbox" name="greenolax" id="greenolax"
					/></label>
				</div>

				<!-- wellness tea -->
				<div class="product">
					<label for="wellness-tea"
						>wellness tea
						<input
							type="checkbox"
							name="Afroganiks wellness tea"
							id="wellness-tea"
					/></label>
				</div>
			</div>

			<button class="dist-btn" type="submit">Submit</button>
		</form>
	</div>
</section>

<script>
	const imageInput = document.getElementById('img-input');
	let uploadedImage = '';
	let displayImg = document.querySelector('.display-img');

	imageInput.addEventListener('change', (event) => {
		const fileReader = new FileReader();
		const selectedFile = event.target.files[0];

		fileReader.addEventListener('load', () => {
			uploadedImage = fileReader.result;
			displayImg.style.backgroundImage = `url(${uploadedImage})`;
		});

		fileReader.readAsDataURL(selectedFile);
	});
</script>
