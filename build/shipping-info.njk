---
title: 'Customer Shipping Info'
layout: 'base.njk'
---

<section class="section-wrap">
	<div class="layout-wrap">
		<div class="form-container">
			<form action="#" netlify method="post" class="shipping-form">
				<div class="heading-container">
					<h3 class="heading">Enter shipping address</h3>
					<p class="subheading">You're almost done!</p>
				</div>

				<div class="input country-wrap">
					<label for="">Country</label>
					<input
						class="country-input"
						type="text"
						placeholder="Nigeria"
						required />
				</div>

				<div class="contact-info name-wrap">
					<label for="">Personal information</label>
					<input
						class="info-input"
						type="text"
						placeholder="Contact name*"
						required />
					<input
						class="info-input"
						type="text"
						placeholder="Phone number*"
						required />
					<input
						class="info-input"
						type="email"
						placeholder="email address*"
						required />
				</div>

				<div class="address-info">
					<label for="">Address</label>
					<input
						type="text"
						class="address-input"
						placeholder="Street, houese/apartment/unit*"
						required />
					<input
						type="text"
						class="address-input"
						placeholder="City*"
						required />
					<input
						type="text"
						class="address-input"
						placeholder="State*"
						required />
				</div>

				<div class="btn-wrap">
					<button class="checkout-btn">Checkout</button>
				</div>
			</form>
		</div>

		<!-- payment method layout -->
		<div class="payment-method-layout">
			<h3 class="payment-title"><span>Secure</span> Payment methods</h3>

			<div class="card-icons">
				<i class="fa-brands fa-cc-mastercard"></i>
				<i class="fa-brands fa-cc-mastercard"></i>
				<i class="fa-brands fa-cc-mastercard"></i>
				<i class="fa-brands fa-cc-mastercard"></i>
			</div>
		</div>
	</div>
</section>
