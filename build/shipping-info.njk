---
title: 'Customer Shipping Info'
layout: 'base.njk'
---

<section class="section-wrap">
	<div class="layout-wrap">
		<div class="form-container">
			<form
				action="/success"
				netlify
				method="POST"
				class="shipping-form"
				name="customer-order"
				id="shipping">
				<div class="heading-container">
					<h3 class="heading">Enter shipping address</h3>
					<p class="subheading">You're almost done!</p>
				</div>

				<div class="input country-wrap">
					<input
						class="country-input"
						type="text"
						placeholder="Country*"
						name="country"
						required />
				</div>

				<div class="contact-info name-wrap">
					<input
						class="info-input"
						type="text"
						placeholder="Contact name*"
						name="customer-name"
						id="customer-name"
						required />

					<input
						class="info-input"
						type="text"
						placeholder="+235 8100 5444689*"
						name="customer-phone"
						id="customer-phone"
						required />

					<input
						class="info-input"
						type="email"
						placeholder="johndoe@gmail.com*"
						id="email-address"
						name="customer-email"
						required />
				</div>

				<div class="address-info">
					<input
						type="text"
						class="address-input"
						placeholder="Street, house/apartment/unit*"
						name="address"
						required />

					<input
						type="text"
						class="address-input"
						placeholder="City*"
						name="city"
						required />

					<input
						type="text"
						class="address-input"
						placeholder="State*"
						name="state"
						required />
				</div>

				<div class="btn-wrap">
					<button type="submit" class="checkout-btn">Go to payments</button>
				</div>

				<!-- hidden input elements -->
				<div class="order-details-wrap">
					<!-- product or treatment name -->
					<input
						type="text"
						id="name"
						name="name-of-product-ordered"
						class="name-input"
						placeholder="products ordered"
						required />

					<!-- price -->
					<input
						type="number"
						id="price"
						class="price-input"
						name="amount-paid-at-checkout"
						placeholder="product price"
						required />
				</div>
			</form>
		</div>

		<!-- payment method layout -->
		<div class="payment-method-layout">
			<h3 class="payment-title"><span>Secure</span> Payment methods</h3>

			<div class="card-icons">
				<i class="fa-brands fa-cc-mastercard"></i>
				<i class="fa-brands fa-cc-visa"></i>
				<i class="fa-brands fa-cc-apple-pay"></i>
			</div>
		</div>
	</div>
</section>
